<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.template.controller.InvoiceList">
    <Page title="Invoice List Page" showNavButton="true" navButtonPress=".onNavBack">
        <List
            items="{invoices>/Invoices}"
            mode="Delete"
            delete=".handleDelete"
        >
            <items>
                <ObjectListItem
                    busyIndicatorDelay="1000"
                    number="{invoices>ExtendedPrice}"
                    numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Error' : 'Success'}"
                    numberUnit="EUR"
                    title="{invoices>ProductName}"
                    counter="{invoices>Quantity}"
                />
            </items>
        </List>
    </Page>
</mvc:View>